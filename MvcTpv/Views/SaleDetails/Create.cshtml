@model MvcTpv.Models.SaleDetail

@{
    ViewData["Title"] = "Create";
}

<h2>Crear</h2>

<h4>Detalle de Venta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @*  @si (rol trabajador) -->*@
                <label asp-for="SaleID" class="control-label">ID de Venta:</label>              
                <label class="control-label">&nbsp;@Model.SaleID</label>               
                <input asp-for="SaleID" type="hidden" value="@Model.SaleID" />
               <br />
               <label class="control-label">Comprobante:</label >
               <div> <p> @Model.Sale.Tipo_Comprobante&nbsp;@Model.Sale.Serie_comprobante&nbsp;@Model.Sale.Num_comprobante </p></div>
                
             @*@si (rol administrator o else) --> <select asp-for="SaleID" class ="form-control" asp-items="ViewBag.SaleID"></select>*@
            </div>
            
            
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PVP" class="control-label"></label>
                <input asp-for="PVP" class="form-control" />
                <span asp-validation-for="PVP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descuento" class="control-label"></label>
                <input asp-for="Descuento" class="form-control" />
                <span asp-validation-for="Descuento" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="ProductID" class="control-label">ID de Producto</label>
                <select asp-for="ProductID" class ="form-control" asp-items="ViewBag.ProductID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="sales"  asp-action="Index" asp-route-id="@Model.SaleID" class="btn btn-default"  >Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
